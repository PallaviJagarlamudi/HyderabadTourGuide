<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#FF4081</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/header_top_padding</item>
        <item name="android:paddingBottom">@dimen/header_bottom_padding</item>
        <item name="android:paddingRight">@dimen/detail_item_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="DescStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/normal_padding</item>
        <item name="android:paddingRight">@dimen/normal_padding</item>
        <item name="android:paddingBottom">@dimen/normal_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <!-- Style for a tab that displays a category name -->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>

    <style name="detail_item_desc">
        <item name="android:layout_marginTop">@dimen/detail_item_marigin</item>
        <item name="android:layout_marginBottom">@dimen/detail_item_marigin</item>
        <item name="android:padding">@dimen/detail_item_padding</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="detail_item_label">
        <item name="android:padding">@dimen/detail_item_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="detail_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>


</resources>
